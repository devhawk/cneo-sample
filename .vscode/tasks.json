{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "type": "npm",
            "script": "install",
            "path": "scripts/",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "mint-tokens",
            "path": "scripts/",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "refund",
            "path": "scripts/",
            "problemMatcher": []
        }
    ]
}